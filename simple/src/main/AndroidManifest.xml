        android:supportsRtl="true"
        android:name=".application.app"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.animation.AnimationUtilsActivity"/>
        <activity android:name=".ui.encrypt.EncryptActivity"/>
        <activity android:name=".ui.Image.ImageUtilsActivity"/>
        <activity android:name=".ui.time.TimeCountActivity"/>
        <activity android:name=".ui.widget.WidgetActivity"/>
        <activity android:name=".ui.CompoundDrawablesUtilsActivity"/>
        <activity android:name=".ui.DialogUtilsActivity"/>
        <activity android:name=".ui.FileUtilsActivity"/>
        <activity android:name=".ui.RegexUtilActivity"/>
        <activity android:name=".ui.SharedPreferencesUtilActivity"/>
        <activity android:name=".ui.SpannableStringBuilderUtilActivity"/>
    </application>

</manifest>